<?xml version="1.0"?>
<config>
    <sections>
        <mobistorelocator2>
		    <label>Storelocator</label>
            <tab>mobicommerce2</tab>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <storelocator2 translate="label" module="mobistorelocator2">
                    <label>Store Locator</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <general_configuration_separator translate="label comment">
                            <label>General</label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>mobistorelocator2/adminhtml_system_config_form_field_separator</frontend_model>
                            <margin_top>10px</margin_top>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </general_configuration_separator>
                        <active translate="label">
                            <label>Enable Storelocator</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <search_region translate="label">
                            <label>Search by region</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_region>
                        <unit_measurement translate="label">
                            <label>Unit of distance</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mobistorelocator2/source_unitmeasurement</source_model>
                            <sort_order>270</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Unit to measure distance between store and customer</comment>
                        </unit_measurement>
                        <storezoom translate="label">
                            <label>Map default zoom level</label>
                            <sort_order>300</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storezoom>
                        <storerating translate="label">
                            <label>Enable Store Rating</label>
                            <sort_order>330</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storerating>
                    </fields>
                </storelocator2>
            </groups>
        </mobistorelocator2>
    </sections>
</config>